{
  "extends": "./node_modules/@cityofboston/config-typescript/tsconfig.default.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "client/**/*",
    "lib/**/*",
    "pages/**/*",
    "server/**/*"
  ]
}
