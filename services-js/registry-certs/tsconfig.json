{
  "extends": "./node_modules/@cityofboston/config-typescript/tsconfig.default.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowJs": false,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "client/**/*",
    "lib/**/*",
    "pages/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
